<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item
                android:left="5dp"
                android:top="5dp">
                <shape>
                    <gradient
                        android:angle="270"
                        android:startColor="#BABABA"
                        android:endColor="#BABABA"/>
                    <stroke
                        android:width="1dp"
                        android:color="#000000"/>
                    <corners android:radius="4dp"/>
                    <padding
                        android:left="15dp"
                        android:top="15dp"
                        android:right="10dp"
                        android:bottom="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item
                android:left="3dp"
                android:top="3dp">
                <shape>
                    <corners android:radius="4dp"/>
                    <solid android:color="#999999"/>
                </shape>
            </item>
            <item
                android:bottom="5dp"
                android:right="5dp">
                <shape>
                    <gradient
                        android:angle="270"
                        android:startColor="#BABABA"
                        android:endColor="#BABABA"/>
                    <stroke
                        android:width="1dp"
                        android:color="#000000"/>
                    <corners android:radius="4dp"/>
                    <padding
                        android:left="10dp"
                        android:top="10dp"
                        android:right="15dp"
                        android:bottom="15dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>